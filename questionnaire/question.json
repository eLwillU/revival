    {
      "linkId": "1",
      "prefix": "1",
      "text": "Wie oft waren Sie wegen der durch die Krebserkrankung verursachten Symptome bei einem/r Hausarzt/-ärztin oder Allgemeinarzt/-ärztin, bevor Sie eine:n Spezialisten/-in konsultiert haben?",
      "extension": [
        {
          "url": "http://hl7.org/fhir/StructureDefinition/translation",
          "extension": [
            {
              "url": "lang",
              "valueCode": "de",
              "valueString": "Wie oft waren Sie wegen der durch die Krebserkrankung verursachten Symptome bei einem/r Hausarzt/-ärztin oder Allgemeinarzt/-ärztin, bevor Sie eine:n Spezialisten/-in konsultiert haben?"
            },
            {
              "url": "lang",
              "valueCode": "fr",
              "valueString": "Combien de fois avez-vous consulté un médecin généraliste ou un médecin de famille en raison des symptômes causés par votre cancer avant de consulter un spécialiste ?"
            }
          ]
        }
      ],
      "type": "choice",
      "answerOption": [
        {
          "valueCoding": {
            "code": "0",
            "display": "Nie – Ich bin direkt zu einem/r Spezialisten/-in gegangen",
            "_display": {
              "extension": [
                {
                  "url": "http://hl7.org/fhir/StructureDefinition/translation",
                  "extension": [
                    {
                      "url": "lang",
                      "valueCode": "de",
                      "valueString": "Nie – Ich bin direkt zu einem/r Spezialisten/-in gegangen"
                    },
                    {
                      "url": "lang",
                      "valueCode": "fr",
                      "valueString": "Jamais – Je suis allé(e) directement chez un(e) spécialiste"
                    }
                  ]
                }
              ]
            }
          }
        },
        {
          "valueCoding": {
            "code": "1",
            "display": "Nie – Ich hatte keine Symptome und der Krebs wurde im Rahmen einer Routine-/Nachuntersuchung oder bei einer Vorsorgeuntersuchung entdeckt",
            "_display": {
              "extension": [
                {
                  "url": "http://hl7.org/fhir/StructureDefinition/translation",
                  "extension": [
                    {
                      "url": "lang",
                      "valueCode": "de",
                      "valueString": "Nie – Ich hatte keine Symptome und der Krebs wurde im Rahmen einer Routine-/Nachuntersuchung oder bei einer Vorsorgeuntersuchung entdeckt"
                    },
                    {
                      "url": "lang",
                      "valueCode": "fr",
                      "valueString": "Jamais – Je n'avais aucun symptôme et le cancer a été découvert lors d'un examen de routine ou d'un dépistage"
                    }
                  ]
                }
              ]
            }
          }
        },
        {
          "valueCoding": {
            "code": "2",
            "display": "Ich war 1 oder 2 Mal bei einem/r Arzt/Ärztin",
            "_display": {
              "extension": [
                {
                  "url": "http://hl7.org/fhir/StructureDefinition/translation",
                  "extension": [
                    {
                      "url": "lang",
                      "valueCode": "de",
                      "valueString": "Ich war 1 oder 2 Mal bei einem/r Arzt/Ärztin"
                    },
                    {
                      "url": "lang",
                      "valueCode": "fr",
                      "valueString": "J'ai consulté un(e) médecin une ou deux fois"
                    }
                  ]
                }
              ]
            }
          }
        },
        {
          "valueCoding": {
            "code": "3",
            "display": "Ich war 3 oder 4 Mal bei einem/r Arzt/Ärztin",
            "_display": {
              "extension": [
                {
                  "url": "http://hl7.org/fhir/StructureDefinition/translation",
                  "extension": [
                    {
                      "url": "lang",
                      "valueCode": "de",
                      "valueString": "Ich war 3 oder 4 Mal bei einem/r Arzt/Ärztin"
                    },
                    {
                      "url": "lang",
                      "valueCode": "fr",
                      "valueString": "J'ai consulté un(e) médecin trois ou quatre fois"
                    }
                  ]
                }
              ]
            }
          }
        },
        {
          "valueCoding": {
            "code": "4",
            "display": "Ich war 5 oder mehr Mal bei einem/r Arzt/Ärztin",
            "_display": {
              "extension": [
                {
                  "url": "http://hl7.org/fhir/StructureDefinition/translation",
                  "extension": [
                    {
                      "url": "lang",
                      "valueCode": "de",
                      "valueString": "Ich war 5 oder mehr Mal bei einem/r Arzt/Ärztin"
                    },
                    {
                      "url": "lang",
                      "valueCode": "fr",
                      "valueString": "J'ai consulté un(e) médecin cinq fois ou plus"
                    }
                  ]
                }
              ]
            }
          }
        },
        {
          "valueCoding": {
            "code": "5",
            "display": "Ich weiss es nicht / Ich erinnere mich nicht",
            "_display": {
              "extension": [
                {
                  "url": "http://hl7.org/fhir/StructureDefinition/translation",
                  "extension": [
                    {
                      "url": "lang",
                      "valueCode": "de",
                      "valueString": "Ich weiss es nicht / Ich erinnere mich nicht"
                    },
                    {
                      "url": "lang",
                      "valueCode": "fr",
                      "valueString": "Je ne sais pas / Je ne m'en souviens plus"
                    }
                  ]
                }
              ]
            }
          }
        }
      ]
    },

